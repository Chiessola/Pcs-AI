{
  "rewrites": [
    {
      "source": "/api/matches",
      "destination": "https://api.football-data.org/v4/matches"
    },
    {
      "source": "/api/basketball",
      "destination": "https://v1.basketball.api-sports.io/games"
    }
  ]
}


{
  "headers": [
    {
      "source": "/(.*).(css|js|woff2|png|jpg|jpeg|webp|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}